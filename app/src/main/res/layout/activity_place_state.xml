<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceStateActivity">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_shadow_start_color">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/menu"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_menu" />

    </LinearLayout>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:layout_below="@id/linear_layout"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin = "20dp"
        android:textStyle="bold"
        android:textSize="40dp"/>

    <ImageView
        android:id="@+id/clock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/place_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_clock"
        />

    <LinearLayout
        android:id="@+id/counter_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/clock"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/plus_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/place_name"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_plus_sign"
            />

        <ImageView
            android:id="@+id/minus_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:layout_below="@id/place_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_minus_sign"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/counter_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date : 20/2/20"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin = "5dp"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time : 15:41"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin = "5dp"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/visitors_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitors : "
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_margin = "5dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/visitors_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54 "
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_margin = "5dp"
                android:textStyle="bold"
                android:textColor="@color/lighGreen"
                android:textSize="30dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>