<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/not_full_dialog_rounded_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/all_invitations_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Max Visitors"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin = "20dp"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_below="@id/all_invitations_text_view"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkGray" />


    <RelativeLayout
        android:id="@+id/max_visitors_container"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/horizontal_line"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/minus_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_minus_sign" />

        <TextView
            android:id="@+id/max_visitors_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/minus_box"
            android:text="1"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/plus_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/max_visitors_text"
            android:background="@drawable/ic_plus_sign" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/max_visitors_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="confirm`"
            android:background="@drawable/accept_button_shape"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="cancel"
            android:background="@drawable/denied_button_shape"/>


    </LinearLayout>



</RelativeLayout>