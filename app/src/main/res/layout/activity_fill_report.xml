<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fill_report_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillReportActivity">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_shadow_start_color">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/menu"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_menu" />

    </LinearLayout>


    <TextView
        android:id="@+id/report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout"
        android:text="Report"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin = "20dp"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_below="@id/report_title"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp"
        android:background="@color/darkGray" />

    <EditText
        android:id="@+id/reason_of_close"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/horizontal_line"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:hint="Write the reason of close here"
        android:gravity="center"
        android:background="@drawable/edit_text_shape_blue"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"/>

    <Button
        android:id="@+id/report_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/regular_button_shape_blue"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@id/reason_of_close"
        android:text="Report"
        android:textStyle="bold" />




</RelativeLayout>